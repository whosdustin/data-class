{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "paths": {
      "@types": ["src/@types"]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["src/@types"]
}
